cabal-version:       >=1.10
name:                lyt
version:             0.0.0
synopsis:            Literate programming tool
license:             GPL-3
license-file:        COPYING
author:              Benjamin Barenblat
category:            Language
build-type:          Simple
stability:           alpha
tested-with:         GHC==7.6.3

executable lyt
  hs-source-dirs:      src
  default-language:    Haskell2010
  -- other-extensions:    
  ghc-options:         -Wall
                       -fwarn-tabs
                       -fwarn-incomplete-uni-patterns
                       -fwarn-monomorphism-restriction
                       -fwarn-auto-orphans
  main-is:             Main.hs
  -- other-modules:       
  build-depends:       base >=4.6 && <4.7
                     , vector >=0.10 && <0.11
